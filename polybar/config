[module/title]
type = internal/xwindow
label-maxlen = 200

[module/pacman-updates]
type = custom/script
;exec = pacman -Qu | wc -l
exec = checkupdates | wc -l
interval = 1000
label = %output%
format-prefix = " "
format-foreground = #666

[module/eth]
type = internal/network
;interface = enp3s0
interface = wlp5s0
interval = 3.0
format-connected-foreground = #666
format-disconnected-foreground = #666
format-connected = <ramp-signal> <label-connected>
label-connected = %downspeed%
ramp-signal-0 = 
;ramp-signal-0=
;format-connected-prefix = ""

[module/ram]
type = internal/memory
interval = 2
format-prefix = " "
format-foreground = #666
label = %gb_used%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-foreground = #666
label = %percentage:2%%


[module/pulseaudio]
type = internal/pulseaudio
label-volume = "%{A3:pavucontrol:} %percentage%%%{A}"
label-volume-foreground = ${root.foreground}
label-muted = %{A3:pavucontrol:} %percentage%%%{A}
label-muted-foreground = #666

[module/date]
type = internal/date
interval = 1
date = " %b %d"
;date-alt = "%Y/%m/%d"
time =  %I:%M:%S
;time-alt = %I:%M:%S
label = "%{A4:~/.config/polybar/plugins/calendar next:}%{A5:~/.config/polybar/plugins/calendar prev:}%{A1:~/.config/polybar/plugins/calendar curr:}%date%  %time%%{A}%{A}%{A}"


[module/bspwm]
type = internal/bspwm
;label-focused = %name%
label-focused = 
