label-occupied = 
label-occupied-padding = 1
label-urgent = 
label-urgent-foreground = #f00
label-urgent-padding = 1
label-empty = 
label-empty-foreground = #666
label-empty-padding = 1

[module/spotify]
type = custom/script
tail = true
format-prefix = "  "
